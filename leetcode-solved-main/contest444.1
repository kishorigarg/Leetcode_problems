class Solution {
public:
    int minimumPairRemoval(vector<int>& nums) {
    int count=0;
    
        auto(issorted)=[](const vector<int>nums){
            for(int i=1;i<nums.size();i++){
                if(nums[i]<nums[i-1]){
                    return false;
                }
            }
            return true;
        };
    while(!issorted(nums)){
        int mini=INT_MAX;
        int index=-1;
        for(int i=0;i<nums.size()-1;i++){
            int a=nums[i]+nums[i+1];
            if(a<mini){
               mini=a;
               index=i;
               
              }
            }
         vector<int>temp;
         for(int i=0;i<nums.size();i++){
              if(i==index){
                  temp.push_back(mini);
              }  
                else if( i==index+1){
                    
                continue;   
                }
                else{
                    temp.push_back(nums[i]);
                }
            }
          nums=temp;
          count++;
          }
            
          return count;  
        
    }
};